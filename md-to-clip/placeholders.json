{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "Placeholders",
    "type": "array",
    "uniqueItems": true,
    "items": {
        "title": "conversion",
        "description": "A conversion",
        "type": "object",
        "properties": {
            "in": {
                "description": "An input TlDr placeholder content for the current conversion\nContrary to `description` key this one can contain human readable word or a contraction like 'arg'",
                "type": "string",
                "minLength": 1,
                "pattern": "^\\w*$",
                "examples": [
                    "arg"
                ]
            },
            "type": {
                "description": "An output Command Line Interface Page placeholder type for the current conversion",
                "type": "string",
                "enum": [
                    "bool",
                    "int",
                    "float",
                    "char",
                    "string",
                    "command",
                    "option",
                    "file",
                    "directory",
                    "path",
                    "/file",
                    "/directory",
                    "/path",
                    "/?file",
                    "/?directory",
                    "/?path",
                    "remote-file",
                    "remote-directory",
                    "remote-path",
                    "/remote-file",
                    "/remote-directory",
                    "/remote-path",
                    "/?remote-file",
                    "/?remote-directory",
                    "/?remote-path",
                    "any",
                    "remote-any"
                ]
            },
            "description": {
                "description": "An output Command Line Interface Page placeholder description for the current conversion\nContrary to `in` key this one should contain human readable word, not a contraction like 'arg'",
                "type": "string",
                "pattern": "^\\w*$",
                "examples": [
                    "argument"
                ]
            },
            "index": {
                "description": "A starting index of an optional part of TlDr placeholder content for the current conversion\nIt should not exceed TlDr placeholder content length minus 1",
                "type": "integer",
                "minimum": 0,
                "examples": [
                    3
                ]
            },
            "is-name": {
                "description": "Whether to allow name/names suffix for a TlDr placeholder content\nWhen false value/values is used instead of name/names",
                "type": "boolean",
                "default": false
            },
            "allow-prefix": {
                "description": "Whether to allow one word prefix for a TlDr placeholder content",
                "type": "boolean",
                "default": false
            }
        },
        "additionalProperties": false
    }
}